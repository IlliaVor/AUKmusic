<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AUKmusic.musicplayer.MusicPlayerController">
    <children>
        <Label text="Now Playing:" />
        <Label fx:id="currentSongLabel" text="No song selected" />
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="prevButton" text="Prev" onAction="#handlePrev" />
            <Button fx:id="playButton" text="Play" onAction="#handlePlay" />
            <Button fx:id="pauseButton" text="Pause" onAction="#handlePause" />
            <Button fx:id="stopButton" text="Stop" onAction="#handleStop" />
            <Button fx:id="nextButton" text="Next" onAction="#handleNext" />
        </HBox>
        <Slider fx:id="volumeSlider" min="0" max="100" value="50" />
        <ListView fx:id="songListView" prefHeight="200.0" prefWidth="300.0" />
    </children>
</VBox>
